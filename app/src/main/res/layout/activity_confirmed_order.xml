<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".buyer.Confirmed_order">

    <TextView
        android:id="@+id/inforamtion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Enter your shipment details"
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:padding="10dp"
        android:background="@drawable/input_design"
        android:layout_marginTop="60dp"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Name"/>

<EditText
        android:padding="10dp"
        android:background="@drawable/input_design"
        android:layout_marginTop="20dp"
        android:id="@+id/p_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="vaild phone number"/>

    <EditText
    android:padding="10dp"
    android:background="@drawable/input_design"
    android:layout_marginTop="20dp"
    android:id="@+id/Email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/Email"/>

    <EditText
        android:padding="10dp"
        android:background="@drawable/input_design"
        android:layout_marginTop="20dp"
        android:id="@+id/Home_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Home Address"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/choose_map"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Or choose from map"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm"
        android:text="confirm"
        android:layout_marginTop="100dp"
        android:background="@android:color/holo_red_dark"/>
</LinearLayout>