<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.Seller_register">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/seller"
        android:id="@+id/seller_icon"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_icon"
        android:text="Seller Registration form"
        android:id="@+id/register_seller"
        android:padding="7dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/seller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Name"
        android:layout_below="@id/register_seller"
        android:padding="7dp"
        android:background="@drawable/input_design"/>
    <EditText
        android:id="@+id/seller_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Phone"
        android:layout_below="@id/seller_name"
        android:padding="7dp"
        android:background="@drawable/input_design"/>
    <EditText
        android:id="@+id/seller_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Email"
        android:layout_below="@id/seller_phone"
        android:inputType="textEmailAddress"
        android:padding="7dp"
        android:background="@drawable/input_design"/>
    <EditText
        android:id="@+id/seller_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="password"
        android:inputType="text"
        android:layout_below="@id/seller_mail"
        android:padding="7dp"
        android:background="@drawable/input_design"/>
    <EditText
        android:id="@+id/seller_Business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Shop ,business Adress"
        android:layout_below="@id/seller_password"
        android:padding="5dp"
        android:background="@drawable/input_design"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_Business"
        android:text="Register"
        android:id="@+id/register_seller_text"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/have_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:layout_below="@id/register_seller_text"
        android:text="Already have an account"
        android:background="@drawable/buttons"/>
</RelativeLayout>