<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buyer.SettingsActivity">
<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/a1"
    android:layout_marginTop="10dp"
    android:background="@color/colorPrimary">
    <android.support.v7.widget.Toolbar
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Close"
            android:text="close"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/Update"
              android:text="Update"
              android:textSize="15sp"
              android:textStyle="bold"
              android:layout_alignParentEnd="true"
              android:textColor="@android:color/white"
              android:layout_alignParentRight="true" />

      </RelativeLayout>
    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile"
        android:layout_below="@id/a1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Userprofile"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change_profile"
        android:text="change_profile"
        android:textSize="15sp"
        android:textStyle="bold"
       android:layout_below="@id/Userprofile"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
         />

    <EditText
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_below="@id/change_profile"
        android:hint="Phone Number"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/input_design"
        android:id="@+id/Number"/>
    <EditText
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_below="@id/Number"
        android:hint="Full Name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/input_design"
        android:id="@+id/Name"/>
    <EditText
        android:layout_width="286dp"
        android:layout_height="50dp"
        android:layout_below="@id/Name"
        android:hint="Adress"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/input_design"
        android:id="@+id/Adress"/>
    <TextView
        android:layout_below="@id/Adress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/choosemap"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Or choose from map"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        />
    <Button
        android:id="@+id/security_questions"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:text="security_questions"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
 />
</RelativeLayout>